                    "admin_server_host" : "{{ kerberos_server }}"
                }
            }
        },
        {
            "krb5-conf": {
                "properties" : {
                    "domains" : "{{ kerberos_server_realm_name|lower() }}, .{{ kerberos_server_realm_name|lower() }}",
                    "manage_krb5_conf" : "true"
